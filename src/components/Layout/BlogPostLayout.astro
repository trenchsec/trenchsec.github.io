---
import '../../styles/global.css';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author: string;
  tags: string[];
  category: string;
  image?: string;
}

const { title, description, pubDate, author, tags, category, image } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/images/brand/favicon/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <title>{title} | Trench Security Blog</title>
  </head>
  <body>
    <!-- Ambient background effect -->
    <div class="bg-ambient" aria-hidden="true"></div>

    <!-- Navigation -->
    <nav class="nav">
      <a href="/" class="nav-brand">Trench Security</a>
      <div class="nav-links">
        <a href="/" class="nav-link">About</a>
        <a href="/portfolio" class="nav-link">Portfolio</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/contact" class="nav-link">Contact</a>
      </div>
    </nav>

    <!-- Main content -->
    <main>
      <article class="blog-post">
        <!-- Back to blog -->
        <a href="/blog" class="back-link">&larr; Back to Blog</a>

        <!-- Post header -->
        <header class="post-header">
          <div class="post-meta">
            <span class="post-category">{category}</span>
            <span class="post-date">{formattedDate}</span>
          </div>
          <h1 class="post-title" set:html={title} />
          <p class="post-description">{description} â€” by {author}</p>
          <div class="post-tags">
            {tags.map(tag => <span class="tag">{tag}</span>)}
          </div>
        </header>

        <!-- Post content -->
        <div class="post-content">
          <slot />
        </div>

        <!-- Post footer -->
        <footer class="post-footer">
          <a href="/blog" class="back-link">&larr; Back to Blog</a>
        </footer>

        <!-- Topics Preview -->
        <section class="coming-soon">
          <h3>Topics on the horizon</h3>
          <p>Building my content library one vulnerability at a time. Writeups, tutorials, and research articles are on the way!</p>
          <div class="topics-preview">
            <span class="topic">IDOR Deep Dives</span>
            <span class="topic">API Hacking</span>
            <span class="topic">Web3 Security</span>
            <span class="topic">Mobile Testing</span>
            <span class="topic">Recon Methodology</span>
          </div>
        </section>
      </article>
    </main>

    <!-- Footer -->
    <footer class="footer">
      <p>&copy; 2025 Trench Security. All rights reserved.</p>
    </footer>
  </body>
</html>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-md) var(--space-xl);
    background: rgba(10, 10, 15, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border);
    z-index: 100;
  }

  .nav-brand {
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
    background-image: linear-gradient(135deg, #a78bfa, #3B82F6, #22C55E);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }

  main {
    min-height: 100vh;
    padding: calc(80px + var(--space-xl)) var(--space-xl) var(--space-xl);
    max-width: 800px;
    margin: 0 auto;
  }

  .footer {
    text-align: center;
    padding: var(--space-lg);
    color: var(--text-muted);
    font-size: 0.875rem;
    border-top: 1px solid var(--border);
  }

  /* Blog Post Styles */
  .blog-post {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .back-link {
    color: var(--text-muted);
    font-size: 0.875rem;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--primary);
  }

  .post-header {
    text-align: center;
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border);
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .post-category {
    padding: 4px 12px;
    background: rgba(139, 92, 246, 0.15);
    color: var(--primary);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-date {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .post-title {
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    margin: 0 0 var(--space-sm) 0;
    background: linear-gradient(135deg, var(--primary-light), var(--secondary), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .post-description {
    color: var(--text-secondary);
    font-size: 1.1rem;
    font-style: italic;
    margin: 0 0 var(--space-md) 0;
    max-width: 100%;
  }

  .post-tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: var(--space-sm);
  }

  .tag {
    font-size: 0.75rem;
    padding: 4px 10px;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-full);
    color: var(--text-muted);
  }

  .post-author {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  /* Post Content Styles */
  .post-content {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    line-height: 1.8;
  }

  .post-content :global(h2) {
    color: var(--text-primary);
    margin: var(--space-sm) 0 var(--space-md) 0;
    padding-bottom: var(--space-sm);
    border-bottom: 1px solid var(--border);
  }

  .post-content :global(h2:first-child) {
    margin-top: 0;
  }

  .post-content :global(h3) {
    color: var(--text-primary);
    margin: var(--space-lg) 0 var(--space-sm) 0;
  }

  .post-content :global(p) {
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
    max-width: 100%;
  }

  .post-content :global(strong) {
    color: var(--text-primary);
  }

  .post-content :global(em) {
    color: var(--primary-light);
  }

  .post-content :global(a) {
    color: var(--primary-light);
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    color: var(--primary);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .post-content :global(li) {
    margin-bottom: var(--space-xs);
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--primary);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    font-style: italic;
    color: var(--text-muted);
  }

  .post-content :global(code) {
    font-family: var(--font-mono);
    background: var(--bg-primary);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    color: var(--accent);
  }

  .post-content :global(pre) {
    background: var(--bg-primary);
    padding: var(--space-md);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: var(--space-md) 0;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin: var(--space-md) 0;
  }

  /* Custom divider style */
  .post-content :global(p:has(text*="// {")) {
    text-align: center;
    color: var(--primary);
    font-family: var(--font-mono);
    margin: var(--space-xl) 0;
  }

  .post-footer {
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border);
  }

  /* Topics Preview Box */
  .coming-soon {
    text-align: center;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    margin-top: var(--space-lg);
  }

  .coming-soon h3 {
    margin: 0 0 var(--space-xs) 0;
    color: var(--text-primary);
  }

  .coming-soon p {
    color: var(--text-muted);
    margin: 0 0 var(--space-lg) 0;
  }

  .topics-preview {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
    justify-content: center;
  }

  .topic {
    padding: var(--space-xs) var(--space-md);
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid var(--accent-dark);
    border-radius: var(--radius-full);
    color: var(--accent);
    font-size: 0.875rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav {
      padding: var(--space-sm) var(--space-md);
      flex-wrap: wrap;
      gap: var(--space-sm);
    }

    .nav-brand {
      font-size: 1rem;
    }

    .nav-links {
      gap: var(--space-sm);
      font-size: 0.8rem;
    }

    main {
      padding: calc(80px + var(--space-md)) var(--space-sm) var(--space-md);
    }

    .post-content {
      padding: var(--space-lg);
    }
  }

  @media (max-width: 480px) {
    .nav {
      justify-content: center;
      text-align: center;
    }

    .nav-brand {
      width: 100%;
      font-size: 0.95rem;
      margin-bottom: var(--space-xs);
    }

    .nav-links {
      width: 100%;
      justify-content: center;
      gap: var(--space-md);
    }

    main {
      padding: calc(100px + var(--space-sm)) var(--space-sm) var(--space-sm);
    }

    .post-content {
      padding: var(--space-md);
    }

    .post-meta {
      flex-direction: column;
      gap: var(--space-xs);
    }
  }
</style>
