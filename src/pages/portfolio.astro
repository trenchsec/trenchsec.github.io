---

<PageLayout title="Portfolio" description="Security research portfolio - Hall of Fames, CVEs, and Certifications by Chloe Obermeyer">
  <article class="portfolio">
    <header class="portfolio-header">
      <h1 class="portfolio-title">
        <span class="text-gradient">Portfolio</span>
      </h1>
      <p class="portfolio-subtitle">A comprehensive collection of certifications, training, achievements, and continuous learning in offensive security.</p>
    </header>

    <!-- Category Filter -->
    <nav class="category-nav">
      {categories.map((cat, index) => (
        <button class={`category-btn ${index === 0 ? 'active' : ''}`} data-category={cat.toLowerCase()}>
          {cat}
        </button>
      ))}
    </nav>

    <!-- Items Grid -->
    <section class="items-grid">
      {items.map((item) => (
        <div class={`item-card ${item.category === 'Profile' ? 'profile-card' : ''}`} data-category={item.category.toLowerCase()}>
          {item.category !== 'Profile' && (
            <div class="item-meta">
              <span class="item-category">{item.category}</span>
              {item.date && <span class="item-date">{item.date}</span>}
            </div>
          )}
          <h2 class="item-title">{item.title}</h2>
          {item.platform && <p class="item-platform">{item.platform}</p>}
          <p class="item-excerpt" set:html={item.excerpt}></p>
          {item.tags.length > 0 && (
            <div class="item-footer">
              <div class="item-tags">
                {item.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          )}
        </div>
      ))}
    </section>

    <!-- Empty State (for when filtering shows no results) -->
    <div class="empty-state" style="display: none;">
      <div class="empty-icon">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/>
          <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/>
          <path d="M4 22h16"/>
          <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/>
          <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/>
          <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/>
        </svg>
      </div>
      <h3>No items yet</h3>
      <p>Check back soon for new content!</p>
    </div>

    <!-- Quick Links -->
    <section class="coming-soon">
      <h3>Explore</h3>
      <p>Building my track record one vulnerability at a time. Stay tuned!</p>
      <div class="topics-preview">
        <a href="/blog" class="topic">Research</a>
        <a href="/blog" class="topic">Bug Bounties</a>
        <button class="topic" data-category="certifications">Certifications</button>
        <button class="topic" data-category="achievements">Achievements</button>
        <button class="topic" data-category="projects">Projects</button>
      </div>
    </section>

  </article>
</PageLayout>

<style>
