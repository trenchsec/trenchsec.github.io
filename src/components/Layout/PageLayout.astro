---
import '../../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Trench Security - Offensive Security Research & Consulting by Chloe Obermeyer" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/images/brand/favicon/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <title>{title} | Trench Security</title>
  </head>
  <body>
    <!-- Ambient background effect -->
    <div class="bg-ambient" aria-hidden="true"></div>

    <!-- Navigation -->
    <nav class="nav">
      <a href="/" class="nav-brand">Trench Security</a>
      <div class="nav-links">
        <a href="/" class="nav-link">About</a>
        <a href="/portfolio" class="nav-link">Portfolio</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/contact" class="nav-link">Contact</a>
      </div>
    </nav>

    <!-- Main content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer">
      <p>&copy; 2025 Trench Security. All rights reserved.</p>
    </footer>
  </body>
</html>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-md) var(--space-xl);
    background: rgba(10, 10, 15, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border);
    z-index: 100;
  }

  .nav-brand {
    font-size: 1.25rem;
    font-weight: 700;
    text-decoration: none;
    background-image: linear-gradient(135deg, #a78bfa, #3B82F6, #22C55E);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }


  main {
    min-height: 100vh;
    padding: calc(80px + var(--space-xl)) var(--space-xl) var(--space-xl);
    max-width: 900px;
    margin: 0 auto;
  }

  .footer {
    text-align: center;
    padding: var(--space-lg);
    color: var(--text-muted);
    font-size: 0.875rem;
    border-top: 1px solid var(--border);
  }

  @media (max-width: 768px) {
    .nav {
      padding: var(--space-sm) var(--space-md);
      flex-wrap: wrap;
      gap: var(--space-sm);
    }

    .nav-brand {
      font-size: 1rem;
    }

    .nav-links {
      gap: var(--space-sm);
      font-size: 0.8rem;
    }

    main {
      padding: calc(80px + var(--space-md)) var(--space-sm) var(--space-md);
    }

    .footer {
      padding: var(--space-md);
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .nav {
      justify-content: center;
      text-align: center;
    }

    .nav-brand {
      width: 100%;
      font-size: 0.95rem;
      margin-bottom: var(--space-xs);
    }

    .nav-links {
      width: 100%;
      justify-content: center;
      gap: var(--space-md);
    }

    main {
      padding: calc(100px + var(--space-sm)) var(--space-sm) var(--space-sm);
    }
  }
</style>
